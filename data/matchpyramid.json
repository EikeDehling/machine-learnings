{
  "net_name": "match_pyramid",
  "global":{
      "model_type": "PY",
      "weights_file": "./data/matchzoo/matchpyramid.weights",
      "save_weights_iters": 10,
      "num_iters": 10,
      "display_interval": 10,
      "test_weights_iters": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/matchzoo/corpus_preprocessed.txt",
        "text2_corpus": "./data/matchzoo/corpus_preprocessed.txt",
        "use_dpool": true,
        "embed_size": 50,
        "vocab_size": 22186,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 20,
        "text2_maxlen": 500
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/matchzoo/rels_train.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/matchzoo/rels_test.txt"
    }
  },
  "model": {
    "model_path": "../MatchZoo/matchzoo/models/",
    "model_py": "matchpyramid.MatchPyramid",
    "setting": {
        "kernel_count": 32, 
        "kernel_size": [3, 3], 
        "dpool_size": [3, 10],
        "dropout_rate": 0
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@3", "map" ]
}

